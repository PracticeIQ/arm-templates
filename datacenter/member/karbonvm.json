{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webNetworkSecurityGroupName": {
            "defaultValue": null,
            "type": "string",
            "metadata": {
                "description": "Generated by Shared Resources when creating the network."
            }
        },
        "virtualNetworkName": {
            "defaultValue": null,
            "type": "string",
            "metadata": {
                "description": "Generated by Shared Resources when creating the network."
            }
        },
        "karbonVMSize": {
            "defaultValue": null,
            "type": "string"
        },
        "karbonNicName": {
            "defaultValue": null,
            "type": "string"
        },
        "karbonIpName": {
            "defaultValue": null,
            "type": "string"
        },
        "karbonVmName": {
            "defaultValue": null,
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": null,
            "type": "securestring"
        },
        "diagnosticStorageAccountName": {
            "defaultValue": null,
            "type": "string"
        },
        "karbonAvailabilitySetName": {
            "defaultValue": null,
            "type": "string"
        }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', 'Private')]"
    },
    "resources": [
        {
            "comments": "The Public IP for the VM. We can get rid of this once P2S is setup. Note this is dynamic, use Azure DNS for RDP using the label",
            "name": "[parameters('karbonIpName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2017-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('karbonVmName')]"
                }
            }
        },
        {
            "comments": "The default network interface definition for a Karbon VM",
            "name": "[parameters('karbonNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('karbonIpName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', parameters('karbonIpName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('webNetworkSecurityGroupName'))]"
                }
            }
        },
        {
            "name": "[parameters('karbonVMName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('karbonNicName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('karbonVMName')]",
                    "adminUsername": "[parameters('karbonVMName')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('karbonVMSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter-Server-Core",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('karbonNicName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('diagnosticStorageAccountName')), '2015-06-15').primaryEndpoints['blob']]"
                    }
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('karbonAvailabilitySetName'))]"
                }
            }
        }
    ],
    "outputs": {}
}